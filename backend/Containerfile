FROM quay.io/ecosystem-appeng/rec-sys-app:0.0.43 AS algo-repo

FROM registry.access.redhat.com/ubi9/python-311

USER root
WORKDIR /app/

RUN dnf update -y

RUN pip3 install uv
COPY pyproject.toml pyproject.toml
RUN uv pip install -r pyproject.toml

# Copy the rest of the app
COPY . .

# Copy the models and feature store from the algo-repo
COPY --from=algo-repo /app/models/ public/models/
COPY --from=algo-repo /app/feature_repo/feature_store.yaml public/feature_store.yaml
COPY --from=algo-repo /app/feature_repo/data/recommendation_interactions.parquet public/feature_repo/data/recommendation_interactions.parquet

RUN chmod -R +r . && ls -la

ENV HF_HOME=/hf_cache
RUN mkdir -p /hf_cache && \
    chmod -R 777 /hf_cache

EXPOSE 8000
ENTRYPOINT ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
